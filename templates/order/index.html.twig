{% extends 'base.html.twig' %}

{% block title %}Valider ma commande{% endblock %}

{% block content %}
    <div class="container-cart">
        <div class="step-progress">
            <div class="step ">
                <span class="step-icon active-icon"><i class="fas fa-shopping-cart"></i></span>
                <span class="step-text">Mon panier</span>
            </div>
            <div class="step active">
                <span class="step-icon active-icon"><i class="fas fa-truck"></i></span>
                <span class="step-text">Choisir l'adresse et le transporteur</span>
            </div>
            <div class="step">
                <span class="step-icon"><i class="fas fa-clipboard-list"></i></span>
                <span class="step-text">Récapitulatif</span>
            </div>
            <div class="step">
                <span class="step-icon"><i class="fas fa-credit-card"></i></span>
                <span class="step-text">Paiement</span>
            </div>
        </div>
        <div class="progress-bar">
            <div class="progress" style="width: 50%;"></div>
        </div>
    </div>

    <div class="center">
    <h2>Je passe ma commande</h2>
    <p>Choisissez vos préférences avant de passer votre commande</p>
    <hr>
    <div class="row">
        <div class="col-md-6">
            {% set formHtml %}
                {{ form_start(form, {action:path('app_order_recap')}) }}
                    {{ form_label(form.adresses, 'Choisissez votre adresse de livraison') }}
                    <a href="{{ path('app_account_adresse_add') }}">Ajouter une nouvelle adresse</a>
                {{ form_end(form) }}
            {% endset %}

            {{ formHtml | replace({'[br]': '<br/>'}) | raw }}
        </div>
        <div class="col-md-6">
            <div class="text-center">
                <b>Récapitulatif de ma commande</b><br>
                <p>Retrouvez le récapitulatif de vos produit</p>
            </div>
            <div class="order-summary">
                {% for key,product in cart %}
                    <div class="row {% if key >0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img src="assets/images/hp/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
                            <br>
                        </div>
                        <div class="col-8 my-auto">
                            <a href="{{ path('app_product', {'slug': product.product.slug}) }}">{{ product.product.name }}</a> <br/>
                            <small>{{ product.product.subtitle }}</small>
                        </div>
                        <div class="col-2 my-auto">
                            x {{ product.quantity }}
                        </div>
                    </div>
                {% endfor %}
            </div>

        </div>
        </div>
    </div>
    </div>
{% endblock %}
