{% extends 'base.html.twig' %}

{% block title %}Ma commande{% endblock %}

{% block content %}

    <div class="container-cart">
        <div class="step-progress">
            <div class="step ">
                <span class="step-icon active-icon"><i class="fas fa-shopping-cart"></i></span>
                <a href="{{ path('app_cart') }}">
                    <span class="step-text">Mon panier</span>
                </a>
            </div>
            <div class="step active">
                <span class="step-icon active-icon"><i class="fas fa-truck"></i></span>
                <span class="step-text">Choisir l'adresse et le transporteur</span>
            </div>
            <div class="step active">
                <span class="step-icon active-icon"><i class="fas fa-clipboard-list"></i></span>
                <span class="step-text">Récapitulatif</span>
            </div>
            <div class="step active">
                <span class="step-icon active-icon"><i class="fas fa-credit-card"></i></span>
                <span class="step-text">Paiement effectué</span>
            </div>
        </div>
        <div class="progress-bar">
            <div class="progress" style="width: 100%;"></div>
        </div>
    </div>

    <div class="container">
    <h2>Confirmation de commande</h2>
    </div>
    <div class="container">
    <p>
        Bonjour <strong>{{ order.user.firstname }} {{ order.user.lastname }}</strong>, <br/><br/>
        Nous vous remercions pour votre commande n°<strong>{{ order.reference }}</strong>.<br>
        Une confirmation vient de vous être envoyée par mail à l'adresse <strong>{{ order.user.email }}</strong>.</p>

    </div>
    <div class="container">
    <p>
        Votre commande sera livrée par
        <strong>
            {{ order.carrierName }}
        </strong> à l'adresse suivante :
        <br/>
        {{ order.delivery |raw }}
        <hr>
        Pour suivre votre commande, rendez-vous dans votre <a href="{{ path('app_account') }}">compte</a> </p>
    </div>


{% endblock %}
