{% set username = comment.user ? comment.user.fullName : 'Anonyme' %}
<div class="comment mb-5" id="c{{ comment.id }}">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">
                <a class="text-decoration-none" href="#">
                    <span class="comment-author">{{ username }}</span>
                </a> {{ comment.createdAt|date('d M Y H:i:s') }}
            </h5>

            <p class="card-text">{{ comment.content }}</p>
        </div>
    </div>
</div>
