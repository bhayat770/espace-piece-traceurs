{% extends 'base.html.twig' %}

{% block title %}Produits de la catégorie {{ category.name }}{% endblock %}

{% block content %}
    <h1>Produits de la catégorie {{ category.name }}</h1>

{% for product in products %}
    <div class="col-6 col-sm-4 col-xl-3">
        <div class="product-default inner-quickview inner-icon">
            <figure>
                <a href="{{ path('app_product', {'slug': product.slug}) }}">
                    <img src="assets/images/hp/{{ product.illustration }}" width="150"
                         height="217" alt="product">
                </a>

            </figure>

            <div class="product-details">
