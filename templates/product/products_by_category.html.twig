{% extends 'base.html.twig' %}

{% block title %}Produits  {{ category.name }}{% endblock %}

{% block content %}
    <div class="container">
    </div>
    <div class="container">
        <br>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('app_home') }}">
                        <i class="fa fa-home"></i>  Accueil
                    </a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('app_products') }}">Nos Produits</a>
                </li>
                <li class="breadcrumb-item active" aria-current="page">{{ category.name }}</li>
            </ol>
        </nav>
    </div>
    <main class="main">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-2">
                    <div class="card">
                        <div class="card-body">
                            <h3 class="card-title">Filtrer</h3>
                            <div class="card-text">
                                {{ form(form) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <h1>Produits {{ category.name }}</h1>
                </div>
                <div class="col-md-9">
                    <h3>Nos produits</h3>
                    <br>
                    <div class="row">
                        {% for product in products %}
                            <div class="col-6 col-sm-4 col-xl-3">
                                <div class="product-default inner-quickview inner-icon">
                                    <figure>
                                        <a href="{{ path('app_product', {'slug': product.slug}) }}">
                                            <img class="product-image" src="/assets/images/hp/{{ product.illustration }}" alt="product">
                                        </a>

                                    </figure>

                                    <div class="product-details">
                                        <h3 class="product-title">
                                            <a href="{{ path('app_product', {'slug': product.slug}) }}">{{ product.name }}</a>
                                        </h3>
                                        <div class="price-box">
                                            {% if product.prixPromo is not null %}
                                                <div class="label-group">
                                                    <div class="product-label label-hot">PROMO</div>
                                                </div>
                                                <del class="product-price old" style="color: gray; text-decoration: line-through;">{{ (product.price / 100) | number_format(2, ',', '.') }} €</del>
                                                <span class="product-price promo">{{ (product.prixPromo / 100) | number_format(2, ',', '.') }} €</span>
                                            {% else %}
                                                <span class="product-price">{{ (product.price / 100) | number_format(2, ',', '.') }} €</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="d-flex align-items-center justify-content-center">
                            {{ knp_pagination_render(products) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
    {% if products|length == 0 %}
        <p>Aucun produit pour cette catégorie.</p>
    {% endif %}
{% endblock %}
