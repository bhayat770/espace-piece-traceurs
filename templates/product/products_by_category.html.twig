                                     <div class="category-list">
                                        <a href="{{ path('products_by_category', {'categorySlug': product.category.slug}) }}" class="product-category">{{ product.category.name }}</a>
                                    </div>
                                </div>#}
                <h3 class="product-title">
                    <a href="{{ path('app_product', {'slug': product.slug}) }}">{{ product.name }}</a>
                </h3>
                <div class="price-box">
                    <span class="product-price">{{ (product.price /100) | number_format(2, ',' , '.')}} €</span>
                </div>
            </div>
        </div>
    </div>
{% endfor %}
