{% extends 'base.html.twig' %}

{% block title %}Ma commande - Espace pièces traceurs{% endblock %}

{% block content %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" crossorigin="anonymous" />

    <div class="container">
    <h1>Ma commande {{ order.reference }}</h1>
    <a href="{{ path('app_account_order') }}">Retour</a>
    <hr>
    </div>
    <div class="container">
    <div class="order-status">
        <strong>Statut de la commande :</strong>
        <div class="progress">
            <div class="progress-bar {% if order.state == 1 %}progress-bar-success{% elseif order.state == 2 %}progress-bar-warning{% elseif order.state == 3 %}progress-bar-info{% endif %}" role="progressbar" style="width: {% if order.state == 1 %}33.33%{% elseif order.state == 2 %}66.66%{% elseif order.state == 3 %}100%{% endif %}">
                <i class="fas fa-check"></i>
                <i class="fas fa-truck"></i>
                <i class="fas fa-flag-checkered"></i>
            </div>
        </div>
        <div class="status-labels">
            <span class="status-label {% if order.state >= 1 %}active{% endif %}">Paiement accepté</span>
            <span class="status-label {% if order.state >= 2 %}active{% endif %}">Préparation en cours</span>
            <span class="status-label {% if order.state >= 3 %}active{% endif %}">Livraison en cours</span>
        </div>
    </div>
    </div>
    <br>
    <br>
        <div class="container">
    <h3>
        <strong>
            Détails
        </strong>
    </h3>
        </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Produit</th>
            <th scope="col">Quantité</th>
            <th scope="col">Prix unitaire</th>
            <th scope="col">Prix total</th>
            <th scope="col">Photo</th>
        </tr>
        </thead>
        <tbody>
        {% for product in order.orderDetails %}
            <tr>
                <td>{{ product.produit }}</td>
                <td>{{ product.quantite }}</td>
                <td>{{ (product.prix/100)|round(2, 'floor')|number_format(2, ',', '.') }} €</td>
                {# <td><img src="{{ asset('assets/images/hp/' ~ product.produit.illustration) }}" alt="{{ product.product.name }}" height="75px"></td> #}
                <th scope="row"></th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <style>
        .order-status {
            margin-bottom: 20px;
        }

        .progress {
            position: relative;
            height: 20px;
            background-color: #f2f2f2;
            border-radius: 10px;
            overflow: hidden;
        }

        .progress-bar {
            position: relative;
            height: 100%;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 10px;
            color: #ffffff;
        }

        .progress-bar i {
            font-size: 16px;
            margin-right: 5px;
        }

        .progress-bar-success {
            background-color: #28a745;
        }

        .progress-bar-warning {
            background-color: #ffc107;
        }

        .progress-bar-info {
            background-color: #17a2b8;
        }

        .status-labels {
            display: flex;
            justify-content: space-between;
            margin-top: 5px;
        }

        .status-label {
            flex: 1;
            text-align: center;
            font-weight: bold;
            font-size: 14px;
            color: #555555;
        }

        .status-label.active {
            color: #000000;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th,
        .table td {
            padding: 8px;
            border: 1px solid #cccccc;
        }

        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .table td {
            text-align: center;
        }

        .table img {
            max-height: 75px;
        }

    </style>
{% endblock %}
